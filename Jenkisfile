pipeline {
    agent any
    stages {
        stage('Clonar repositorio') {
            steps {
                git 'https://github.com/cristianca23/RetoChoucair.git'
            }
        }
        stage('Compilaci√≥n') {
            steps {
                sh './gradlew build'
            }
        }
        stage('Ejecutar pruebas') {
            steps {
                sh './gradlew clean test'
            }
        }
    }
    post {
        always {
            junit 'build/test-results/*/.xml'
        }
    }
}